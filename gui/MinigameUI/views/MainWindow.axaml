<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MinigameUI.MainWindow"
        Title="MinigameUI">
    
    <!-- One root container (e.g., StackPanel or Grid) that contains both your UI components -->
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Click="ClickHandler">Start</Button>
        <TextBlock Margin="0 10" x:Name="message">"Apasa start pentru a incepe!"</TextBlock>
        
        <!-- This Grid is now inside the StackPanel, which is the root container -->
        <Grid x:Name="TileGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </StackPanel>
</Window>
